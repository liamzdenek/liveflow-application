{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@liveflow/shared": ["packages/shared/src/index.ts"],
      "@liveflow/api": ["packages/api/src/index.ts"],
      "@liveflow/data-generation": ["packages/data-generation/src/index.ts"],
      "@liveflow/infrastructure": ["packages/infrastructure/src/index.ts"],
      "@liveflow/frontend": ["packages/frontend/src/main.tsx"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "tmp"]
}
